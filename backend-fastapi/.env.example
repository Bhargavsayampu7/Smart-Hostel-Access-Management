# Backend Environment Variables
# Copy this file to .env for local development

# =============================================================================
# DATABASE
# =============================================================================

# Database Connection String (REQUIRED)
# Development: sqlite:///./dev.db
# Production: postgresql+psycopg://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./dev.db

# Alternative PostgreSQL URL names (for compatibility with different platforms)
# POSTGRES_URL=postgresql://...
# POSTGRESQL_URL=postgresql://...

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Secret Key (REQUIRED - CHANGE IN PRODUCTION!)
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=change-me-in-production-min-32-chars

# JWT Token Expiration (minutes) - Default: 7 days
JWT_EXPIRE_MINUTES=10080

# QR Token Time-to-Live (minutes) - Default: 15 minutes
QR_TOKEN_TTL_MINUTES=15

# =============================================================================
# ML SERVICE
# =============================================================================

# ML Service API URL
# Development: http://localhost:8000
# Production: https://hostel-ml.onrender.com
ML_API_URL=http://localhost:8000

# Enable ML Predictions (true/false)
USE_ML_PREDICTION=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS Origins (comma-separated)
# Development: http://localhost:5173,http://localhost:3000
# Production: https://hostel-frontend.onrender.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5002

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Environment Mode (development/production)
ENVIRONMENT=development

# Server Port (optional, defaults handled by uvicorn)
# PORT=5001
