# Smart Hostel Access Management - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# BACKEND CONFIGURATION (backend-fastapi/)
# =============================================================================

# Database Connection (REQUIRED in production)
# Development: sqlite:///./dev.db
# Production: postgresql+psycopg://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./dev.db

# JWT Secret (REQUIRED - CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -hex 32
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32

# JWT Token Expiration (minutes)
JWT_EXPIRE_MINUTES=10080

# QR Token Time-to-Live (minutes)
QR_TOKEN_TTL_MINUTES=15

# =============================================================================
# ML SERVICE CONFIGURATION
# =============================================================================

# ML Service URL
# Development: http://localhost:8000
# Production: https://your-ml-service.onrender.com
ML_API_URL=http://localhost:8000

# Enable/disable ML predictions (true/false)
USE_ML_PREDICTION=false

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS origins (comma-separated)
# Development: http://localhost:5173,http://localhost:3000
# Production: https://your-frontend.onrender.com,https://your-frontend.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Environment mode (development/production)
ENVIRONMENT=development

# =============================================================================
# FRONTEND CONFIGURATION (frontend/)
# =============================================================================

# API Base URL for frontend
# Development: http://localhost:5002/api (handled by Vite proxy)
# Production: https://your-backend.onrender.com/api
VITE_API_BASE_URL=http://localhost:5002/api
